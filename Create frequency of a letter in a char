#include<stdio.h>
#include<string.h>

int main()
{
	char x[100], search;
	int count=0,i;
	printf("enter the string: ");
	fgets(x,sizeof(x),stdin);
	printf("enter letter = ");
	scanf("%c",&search);
	for(i=0 ; x[i]!='\0'; i++)
	{
		if(search == x[i])
			count++;
    }
	printf("%d", count);
	return 0;
}
