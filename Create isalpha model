#include <stdio.h>
#include <ctype.h>
int main()
{
    char c;
    printf("Enter a character: ");
    scanf("%c", &c);

    if(isalpha(c))
    {
        printf("%c is an alphabet.", c);
		if(c =='a'||c =='e'||c =='i'||c =='o'||c =='u' || c =='A'||c =='O'||c =='I'||c =='E'||c =='U')
        {
        	printf("vowel");
		}
		else
		{
			printf("consonent");
		}
    }
    else
    {
        printf("%c is not an alphabet.", c);
    }
    return 0;
}
